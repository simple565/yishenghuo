<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/page_background"
              android:orientation="vertical">

    <com.yishenghuo.yishenghuo.ui.TitleBar
        android:id="@+id/neighbor_titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar"
        android:background="@drawable/title_background"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        />

    <com.yishenghuo.yishenghuo.ui.BannerView
        android:id="@+id/neighbor_bannerview"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/neighbor_tv_activity"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/activities"
            android:textColor="@color/neighbor_text_color"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/neighbor_tv_news"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/news"
            android:textColor="@color/neighbor_text_color"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/neighbor_tv_hot"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/hot_topic"
            android:textColor="@color/neighbor_text_color"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/neighbor_rl_circle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/neighbor_select"
        android:clickable="true"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        >

        <ImageView
            android:id="@+id/neighbor_iv_circle"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:background="@drawable/neighbor_circle"/>

        <TextView
            android:id="@+id/neighbor_tv_circle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_toRightOf="@id/neighbor_iv_circle"
            android:gravity="center"
            android:text="@string/neighbor_circle"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/neighbor_iv_circle_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_arrow_right"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/neighbor_rl_dynamic"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/neighbor_select"
        android:clickable="true"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        >

        <ImageView
            android:id="@+id/neighbor_iv_dynamic"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:background="@drawable/dynamic"/>

        <TextView
            android:id="@+id/neighbor_tv_dynamic"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_toRightOf="@id/neighbor_iv_dynamic"
            android:gravity="center"
            android:text="@string/dynamic"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/neighbor_iv_dynamic_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_arrow_right"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/neighbor_rl_neighbors"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/neighbor_select"
        android:clickable="true"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        >

        <ImageView
            android:id="@+id/neighbor_iv_neighbors"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:background="@drawable/neighbors"/>

        <TextView
            android:id="@+id/neighbor_tv_neighbors"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_toRightOf="@id/neighbor_iv_neighbors"
            android:gravity="center"
            android:text="@string/neighbors"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/neighbor_iv_neighbors_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_arrow_right"/>

    </RelativeLayout>
</LinearLayout>