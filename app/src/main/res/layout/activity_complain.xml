<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background"
    android:orientation="vertical">

    <com.yishenghuo.yishenghuo.ui.weiget.TitleBar
        android:id="@+id/complain_titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar"
        android:background="@drawable/title_background"
        android:paddingEnd="10dp"
        android:paddingStart="10dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/complain_tv_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/complain_person"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/complain_edt_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:gravity="center"
            android:textSize="18sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/complain_tv_detail_explain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/detail_explain"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/complain_edt_detail_explain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_toEndOf="@id/complain_tv_detail_explain"
            android:gravity="center"
            android:minLines="5"
            android:textSize="18sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/complain_submit"
        android:layout_width="245dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="36dp"
        android:background="@drawable/btn_shape"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:textSize="23sp" />

</LinearLayout>



