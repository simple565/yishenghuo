<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background"
    android:orientation="vertical">

    <com.maureen.yishenghuo.ui.TitleBar
        android:id="@+id/building_setting_titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/TitleBar"
        android:background="@drawable/title_background"
        android:paddingEnd="10dp"
        android:paddingStart="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="14sp"
            android:layout_marginTop="10sp"
            android:text="@string/choose_building"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/building_setting_sp_choose_building"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="20sp"
            android:layout_marginTop="20sp"
            android:entries="@array/building" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="14sp"
            android:layout_marginTop="10sp"
            android:text="@string/choose_unit"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/building_setting_sp_choose_unit"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="20sp"
            android:layout_marginTop="20sp"
            android:entries="@array/unit" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="14sp"
            android:layout_marginTop="10sp"
            android:text="@string/choose_floor"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/building_setting_sp_choose_floor"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="20sp"
            android:layout_marginTop="20sp"
            android:entries="@array/floor" />

        <Button
            android:id="@+id/building_setting_btn_submit"
            android:layout_width="160sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="100sp"
            android:background="@drawable/btn_shape"
            android:text="@string/submit"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>
</LinearLayout>
