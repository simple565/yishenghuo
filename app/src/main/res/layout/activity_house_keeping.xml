<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background"
    android:orientation="vertical">

    <com.maureen.yishenghuo.ui.TitleBar
        android:id="@+id/house_keeping_titlebar"
        style="@style/TitleBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/TitleBar" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120sp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:padding="10dp">

        <ImageView
            android:id="@+id/housekeeping_img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_property" />

        <TextView
            android:id="@+id/housekeeping_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10sp"
            android:layout_toEndOf="@+id/housekeeping_img1"
            android:text="@string/housekeeping_name1"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/housekeeping_company1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/housekeeping_company" />

        <TextView
            android:id="@+id/housekeeping_price1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/housekeeping_price1" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120sp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:padding="10dp">

        <ImageView
            android:id="@+id/housekeeping_img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_property" />

        <TextView
            android:id="@+id/housekeeping_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10sp"
            android:layout_toEndOf="@+id/housekeeping_img2"
            android:text="@string/housekeeping_name2"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/housekeeping_company2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/housekeeping_company" />

        <TextView
            android:id="@+id/housekeeping_price2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/housekeeping_price2" />

    </RelativeLayout>

</LinearLayout>

